" 検索/置換系の設定
set ignorecase
set smartcase
set incsearch
set wrapscan
set inccommand=split
nnoremap <Esc><Esc> :nohlsearch<CR><Esc>

" インデント系の設定
set tabstop=2
set shiftwidth=2
set softtabstop=0
set expandtab
set smarttab
set autoindent

" カーソル系の設定
set number
set cursorline
set whichwrap=b,s,h,l,<,>,[,],~
set backspace=indent,eol,start
